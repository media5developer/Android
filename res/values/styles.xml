<?xml version="1.0" encoding="utf-8"?>
<!-- スタイル定義ファイル -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Yさん担当画面のスタイル -->
    <style name="calc_display">
        <item name="android:background">@color/calc_display_bg</item>
        <item name="android:textColor">@color/calc_display_text</item>
        <item name="android:text">@string/calc_message_default</item>
        <item name="android:textSize">@dimen/calc_display_text</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">@dimen/calc_display_padding</item>
        <item name="android:layout_margin">@dimen/calc_display_margin</item>
    </style>
    <style name="calc_button">
        <item name="android:textColor">@color/calc_button_text</item>
        <item name="android:textSize">@dimen/calc_button_text</item>
        <item name="android:padding">@dimen/calc_button_padding</item>
        <item name="android:layout_margin">@dimen/calc_button_margin</item>
    </style>

</resources>
